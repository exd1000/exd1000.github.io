<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Loading Memory Space...</title>
    <link href="https://fonts.googleapis.com/css2?family=Share+Tech+Mono&display=swap" rel="stylesheet" />
    <style>
      body {
        background-color: white;
        color: black;
        font-family: 'Share Tech Mono', monospace;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        font-size: 1.5rem;
        overflow: hidden;
        text-align: center;
      }

      #flash-overlay {
        position: fixed;
        inset: 0;
        background: white;
        opacity: 0;
        transition: opacity 0.7s ease;
        z-index: 50;
      }

      .glitch {
        position: relative;
        color: black;
        font-size: 2rem;
        margin-bottom: 1rem;
      }

      .glitch::before,
      .glitch::after {
        content: attr(data-text);
        position: absolute;
        left: 0;
        width: 100%;
        overflow: hidden;
        z-index: -1;
      }

      .glitch::before {
        top: -1px;
        left: 1px;
        color: #ff00c8;
      }

      .glitch::after {
        top: 1px;
        left: -1px;
        color: #00f0ff;
      }

      #percent-text {
        font-size: 1.5rem;
        color: gray;
        margin-top: 0.5rem;
      }
    </style>
  </head>

  <body>
    <div id="loading-text" class="glitch" data-text="Loading Memory Space...">Loading Memory Space...</div>
    <div id="percent-text">0% complete</div>
    <div id="flash-overlay"></div>

    <script>
      const loadingText = document.getElementById('loading-text');
      const percentText = document.getElementById('percent-text');
      const flashOverlay = document.getElementById('flash-overlay');

      let percent = 0;
      let interval;

      function updateLoading() {
        let increment;
        let speed;

        if (percent < 30) {
          increment = Math.floor(Math.random() * 3) + 1; // 1-3%
          speed = 150;
        } else if (percent < 70) {
          increment = Math.floor(Math.random() * 4) + 4; // 4-7%
          speed = 100;
        } else {
          increment = Math.floor(Math.random() * 6) + 10; // 10-15%
          speed = 50;
        }

        percent += increment;
        if (percent > 100) percent = 100;

        loadingText.setAttribute('data-text', "Loading Memory Space...");
        percentText.textContent = `${percent}% complete`;

        if (percent === 100) {
          clearInterval(interval);
          setTimeout(() => {
            flashOverlay.style.opacity = 1;
            setTimeout(() => {
              window.location.href = "/start"; // redirect when done
            }, 700);
          }, 500);
        } else {
          clearInterval(interval);
          interval = setInterval(updateLoading, speed);
        }
      }

      // Start it
      interval = setInterval(updateLoading, 500);
    </script>
  </body>
</html>